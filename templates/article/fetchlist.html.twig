{% extends 'base.html.twig' %}

{% block title %}Hello LuckyController!{% endblock %}

{% block body %}
{% include 'header.html.twig' %}
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Liste Articles</h1>
                        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                            <li class="breadcrumb-item active">Static Navigation</li>
                        </ol>
                        <div class="row">
                            {% for article in articles %}
                                <div class="col-md-4 mb-4">
                                    <div class="card" style="width: 18rem;">
                                        <img class="card-img-top" src="{{ asset('uploads/brochures/' ~ article.brochureFilename) }}" alt="Image de {{ article.titre }}">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ article.titre }}, id : {{article.id}}</h5>
                                            <p class="card-text">{{ article.text|slice(0, 100) }}...</p>
                                            <a href="{{ path('app_article_update', {id: article.id}) }}" class="btn btn-primary">Modifier</a>
                                            <a href="{{ path('app_article_delete', {id: article.id}) }}" class="btn btn-danger">Supprimer</a>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <p>Aucun article disponible.</p>
                            {% endfor %}
                        </div>
                        <div style="height: 100vh"></div>
                    </div>
                </main>
                {% include 'footer.html.twig' %}
            </div>

{% endblock %}
